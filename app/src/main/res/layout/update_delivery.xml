<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="683dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Order ID"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderID1Val"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderEstimateDate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Order Estimate Date"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/orderEstimateDateVal"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/OrderEstimateDate"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address2"
                android:layout_width="148dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:text="Delivery partner"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/setDeliveryPatner"
                android:layout_width="187dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="@string/Category" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/currentState"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_margin="10dp"
                android:text="Current Status"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/setStatus"
                android:layout_width="242dp"
                android:layout_height="37dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="@string/Category" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="Update" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>